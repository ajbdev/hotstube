    "mime-types": "^2.1.17"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "elasticlunr": "^0.9.5",
    "electron-compile": "^6.4.1",
    "glob": "^7.1.2",
    "heroprotocol": "^0.4.0",
    "moment": "^2.18.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-virtualized": "^9.9.0",
